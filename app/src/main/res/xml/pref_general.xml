    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->

    <PreferenceCategory android:title="ログイン設定">
        <EditTextPreference
            android:key="username"
            android:title="@string/pref_title_user_id"
            android:defaultValue=""
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />

        <EditTextPreference
            android:key="password"
            android:title="@string/pref_title_password"
            android:defaultValue=""
            android:selectAllOnFocus="true"
            android:inputType="textPassword"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />

        <EditTextPreference
            android:key="url"
            android:title="@string/pref_title_server_url"
            android:defaultValue=""
            android:selectAllOnFocus="true"
            android:inputType="textCapWords"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />

        <CheckBoxPreference
            android:key="auto_login"
            android:title="@string/pref_title_auto_login"
            android:summary="@string/pref_summary_auto_login"
            android:defaultValue="false"/>
    </PreferenceCategory>





