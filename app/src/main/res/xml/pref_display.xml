<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="default_schedule_display_mode"
        android:title="@string/pref_title_default_schedule_display_mode"
        android:defaultValue="0"
        android:entries="@array/pref_default_schedule_display_mode_titles"
        android:entryValues="@array/pref_default_schedule_display_mode_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <CheckBoxPreference
        android:key="enable_quick_edit"
        android:title="@string/pref_title_enable_quick_edit"
        android:summary="@string/pref_summary_enable_quick_edit"
        android:defaultValue="false"/>

    <EditTextPreference
        android:key="category_blue"
        android:title="@string/pref_title_category_blue"
        android:defaultValue="@string/pref_default_category_blue"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="category_red"
        android:title="@string/pref_title_category_red"
        android:defaultValue="@string/pref_default_category_red"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="category_green"
        android:title="@string/pref_title_category_green"
        android:defaultValue="@string/pref_default_category_green"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="category_yellow"
        android:title="@string/pref_title_category_yellow"
        android:defaultValue="@string/pref_default_category_yellow"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="category_black"
        android:title="@string/pref_title_category_black"
        android:defaultValue="@string/pref_default_category_black"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />


